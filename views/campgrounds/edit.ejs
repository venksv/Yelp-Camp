<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control"  type="text" name="campground[image]" value="<%= campground.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" name="campground[description]"><%= campground.description %></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-large btn-default btn-block btn-primary">Submit</button>
                </div>
            </form>
            <a href="/">Go To Home</a>
            <br>
            <a href="/campgrounds/new">Add New Campgrounds</a>

        </div>
    </div>
</div>

<% include ../partials/footer %>